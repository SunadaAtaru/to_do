<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">タスク一覧</h1>
        <%= link_to "新規タスク作成", new_task_path, class: "btn btn-outline-success shadow-sm" %>

      </div>

      <% if @tasks.any? %>
        <% @tasks.each do |task| %>
          <div class="card shadow-sm rounded mb-4">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                  <% if task.status == '完了' %>
                    <i class="bi bi-check-circle-fill text-success me-2 fs-4"></i>
                  <% else %>
                    <i class="bi bi-circle text-secondary me-2 fs-4"></i>
                  <% end %>

                  <h5 class="mb-0 <%= task.status == '完了' ? 'text-muted' : '' %>">
                    <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
                  </h5>
                </div>

                <small class="text-muted">
                  <%= task.due_date.present? ? task.due_date.strftime('%Y/%m/%d') : '期限なし' %>
                </small>
              </div>

              <% if task.description.present? %>
                <p class="mb-2 text-secondary small"><%= task.description.truncate(50) %></p>
              <% end %>

              <div class="d-flex justify-content-between align-items-center">
                <span class="badge <%= task.status == '完了' ? 'bg-success' : 'bg-warning text-dark' %> px-3 py-2">
                  <%= task.status %>
                </span>

                <div>
                  <%= link_to "編集", edit_task_path(task), class: "btn btn-outline-primary btn-sm me-2" %>
                  <%= link_to "詳細", task_path(task), class: "btn btn-outline-secondary btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="alert alert-info shadow-sm">
          タスクがありません。新しいタスクを作成しましょう。
        </div>
      <% end %>

    </div>
  </div>
</div>
