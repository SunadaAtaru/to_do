<div class="container my-5">
  <div class="card shadow-sm rounded">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
      <h1 class="h4 mb-0 fw-bold text-primary"><%= @task.title %></h1>
      <span class="badge <%= @task.status == '完了' ? 'bg-success' : 'bg-warning text-dark' %> px-3 py-2">
        <%= @task.status %>
      </span>
    </div>

    <div class="card-body">
      <% if @task.description.present? %>
        <h5 class="text-secondary mb-2">詳細</h5>
        <p class="text-muted"><%= @task.description %></p>
      <% end %>

      <% if @task.due_date.present? %>
        <p class="mb-2">
          <strong>期限：</strong> <%= @task.due_date.strftime('%Y/%m/%d') %>
        </p>
      <% end %>

      <p>
        <small class="text-muted">作成日時: <%= @task.created_at.strftime('%Y/%m/%d %H:%M') %></small>
      </p>
    </div>

    <div class="card-footer bg-white">
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to "戻る", tasks_path, class: "btn btn-secondary shadow-sm" %>
        <div class="d-flex gap-2">
          <%= link_to "編集", edit_task_path(@task), class: "btn btn-outline-primary shadow-sm" %>
          
          <%= button_to "削除", task_path(@task), method: :delete, class: "btn btn-outline-danger shadow-sm delete-btn" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap モーダル -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteConfirmModalLabel">確認</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>
      <div class="modal-body">
        本当に削除しますか？
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
        <button type="button" class="btn btn-danger" id="modalDeleteOk">削除する</button>
      </div>
    </div>
  </div>
</div>
