<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1 class="card-title"><%= @task.title %></h1>
      <div>
        <span class="badge <%= @task.status == '完了' ? 'bg-success' : 'bg-warning' %>"><%= @task.status %></span>
      </div>
    </div>
    <div class="card-body">
      <% if @task.description.present? %>
        <h5 class="card-subtitle mb-2 text-muted">詳細</h5>
        <p class="card-text"><%= @task.description %></p>
      <% end %>
      
      <% if @task.due_date.present? %>
        <p class="card-text">
          <strong>期限：</strong> <%= @task.due_date.strftime('%Y/%m/%d') %>
        </p>
      <% end %>
      
      <p class="card-text">
        <small class="text-muted">作成日時: <%= @task.created_at.strftime('%Y/%m/%d %H:%M') %></small>
      </p>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
          <div>
            <%= link_to "戻る", tasks_path, class: "btn btn-outline-secondary" %>
          </div>
          <div class="d-flex gap-2">
            <%= link_to "編集", edit_task_path(@task), class: "btn btn-outline-primary" %>
            <%= button_to "削除", task_path(@task), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>