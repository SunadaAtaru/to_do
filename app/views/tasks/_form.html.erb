<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "詳細", class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :status, "ステータス", class: "form-label" %>
    <%= form.select :status, ['未完了', '完了'], {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :due_date, "期限日", class: "form-label" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <%= link_to "戻る", tasks_path, class: "btn btn-outline-secondary" %>
    <%= form.submit "保存", class: "btn btn-primary" %>
  </div>
<% end %>