<div class="card shadow-sm p-4">
  <%= form_with(model: task, local: true) do |form| %>

    <% if task.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= t('errors.template.header', count: task.errors.count) %></h4>
        <p><%= t('errors.template.body') %></p>
        <ul>
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-floating mb-3">
      <%= form.text_field :title, class: "form-control", placeholder: "タイトル" %>
      <%= form.label :title, "タイトル" %>
    </div>

    <div class="form-floating mb-3">
      <%= form.text_area :description, class: "form-control", placeholder: "詳細", rows: 5 %>
      <%= form.label :description, "詳細" %>
    </div>

    <div class="mb-3">
      <%= form.label :status, "ステータス", class: "form-label" %>
      <%= form.select :status, ['未完了', '完了'], {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= form.label :due_date, "期限日", class: "form-label" %>
      <%= form.date_field :due_date, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-between mt-4">
      <%= link_to "戻る", tasks_path, class: "btn btn-outline-secondary" %>
      <%= form.submit "保存", class: "btn btn-outline-primary" %>
    </div>

  <% end %>
</div>
