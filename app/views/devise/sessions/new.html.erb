<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4 shadow-sm rounded bg-white">
        <h2 class="h4 mb-4 text-primary fw-bold">ログイン</h2>

        <%= form_with(model: resource, url: session_path(resource_name), local: true) do |f| %>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="d-flex justify-content-center">
            <%= f.submit "ログイン", class: "btn btn-outline-primary shadow-sm" %>
          </div>


          <div class="mt-3 text-center">
            <%= link_to "パスワードをお忘れですか？", new_user_password_path, class: "btn btn-outline-secondary btn-sm shadow-sm" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

