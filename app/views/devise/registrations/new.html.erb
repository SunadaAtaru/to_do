<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm rounded p-4 bg-white">
        <h2 class="fw-bold text-secondary mb-4">新規登録</h2>


        <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-floating mb-3">
            <%= f.text_field :username, class: "form-control", placeholder: "ユーザー名" %>
            <%= f.label :username, "ユーザー名" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
            <%= f.label :email, "メールアドレス" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
            <%= f.label :password, "パスワード" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認）" %>
            <%= f.label :password_confirmation, "パスワード（確認）" %>
          </div>
         <div class="d-flex justify-content-center">
          <%= f.submit "登録", class: "btn btn-outline-primary btn-sm shadow-sm" %>
        </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= link_to "ログインはこちら", new_session_path(resource_name), class: "btn btn-outline-primary btn-sm shadow-sm" %>

        </div>
      </div>
    </div>
  </div>
</div>
