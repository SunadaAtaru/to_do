<div class="container mt-5">
  <div class="card p-4 shadow-sm">
    <h2 class="mb-4">プロフィール編集</h2>

    <%= form_with model: resource, url: registration_path(resource_name), local: true, method: :put do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password %> <span class="text-muted">(変更しない場合は空欄)</span>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, "現在のパスワード" %> <span class="text-muted">(変更には必須)</span>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <%= f.submit "更新", class: "btn btn-primary w-100" %>
    <% end %>

    <hr>

    <h5 class="mt-4">アカウント削除</h5>
    <%= button_to "アカウントを削除する", registration_path(resource_name), method: :delete,
          data: { confirm: "本当に削除してよろしいですか？" },
          class: "btn btn-danger mt-2 w-100" %>
  </div>
</div>
